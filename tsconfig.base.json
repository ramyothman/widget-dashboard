{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@factoryplus/core": ["libs/essentials/core/src/index.ts"],
      "@factoryplus/feature-dashboard": [
        "libs/features/dashboard/src/index.ts"
      ],
      "@factoryplus/store": ["libs/essentials/store/src/index.ts"],
      "@factoryplus/ui-library": ["libs/essentials/ui-library/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
